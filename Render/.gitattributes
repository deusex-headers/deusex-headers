# Enforce some common default.
* text=auto

# Mark source files as crlf text.
*.c text eol=crlf
*.cpp text eol=crlf
*.h text eol=crlf
*.rc text=crlf
*.uc text eol=crlf
*.txt text eol=crlf

# Mark libraries as binary.
*.lib binary

# Mark some script/markup files as crlf.
*.upkg text eol=crlf

# Mark common texture and sound formats as binary
*.bmp binary
*.jpg binary
*.mp3 binary
*.ogg binary
*.pcx binary
*.png binary
*.tif binary
*.tiff binary
*.tga binary
*.wav binary
